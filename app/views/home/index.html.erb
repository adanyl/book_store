<h1>Welcome to BookStore</h1>
<p>This is the homepage of this Rails application.</p>
<% if current_user.present? %>
  <%= link_to "My profile", edit_user_registration_path, class: "nav-link" %>
  <%= button_to "Log Out", destroy_user_session_path, method: 'delete', class: 'btn btn-danger', style: 'margin-top: 20px' %>
<% else %>
  <%= button_to 'Sign Up', new_user_registration_path, method: :get, class: 'btn btn-primary btn-lg', style: 'margin-top: 20px'%>
  <%= button_to 'Log In', new_user_session_path, method: :get, class: 'btn btn-primary btn-lg', style: 'margin-top: 20px'%>
<% end %>