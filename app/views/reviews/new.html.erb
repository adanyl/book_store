<h1>New Review</h1>

<%= form_for :review, url: reviews_path do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 10, required: true %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment, rows: 10, required: true %>
  </div>

   <%= form.hidden_field :book_id, value: params[:book_id] %>

  <div>
    <%= form.submit "Create Review" %>
  </div>
<% end %>

<%= link_to 'Back to Book', book_path(@book) %>