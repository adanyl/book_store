<h1>Edit Review</h1>

<%= form_with(model: @review, local: true) do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 10, required: true %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment, rows: 10, required: true %>
  </div>

  <%= form.hidden_field :book_id, value: @review.book_id %>

  <div>
    <%= form.submit "Update Review" %>
  </div>
<% end %>

<%= link_to 'Back to Review', review_path(@review), class: 'btn btn-secondary btn-lg', style: 'margin-top: 20px' %>