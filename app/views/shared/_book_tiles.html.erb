<style>
  .book-tile {
    border: 1px solid #ddd;
    padding: 15px;
    margin: 10px;
    text-align: center;
    width: 200px;
    display: inline-block;
  }
</style>

<% if books.any? %>
  <div>
    <% books.each do |book| %>
      <div class="book-tile">
        <h3><%= link_to book.title, book_path(book.id) %></h3>
        <p><%= book.author %></p>
        <p><%= number_to_currency(book.price) %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No books here.</p>
<% end %>